#include <dt-bindings/zmk/matrix_transform.h>

/ {

	chosen {
		zmk,kscan = &kscan0;
		zmk,matrix_transform = &default_transform;
	};

	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <10>;
		rows = <4>;
		map = <
                RC(0,0)  RC(0,1)  RC(0,2)  RC(0,3)  RC(0,4)           RC(0,9)  RC(0,8)  RC(0,7)  RC(0,6) RC(0,5) 
		        RC(1,0)  RC(1,1)  RC(1,2)  RC(1,3)  RC(1,4)           RC(1,9)  RC(1,8)  RC(1,7)  RC(1,6) RC(1,5)
		        RC(2,0)  RC(2,1)  RC(2,2)  RC(2,3)  RC(2,4)           RC(2,9)  RC(2,8)  RC(2,7)  RC(2,6) RC(2,5)
		                          RC(3,2)  RC(3,3)  RC(3,4)           RC(3,9)  RC(3,8)  RC(3,7)
		>;
	};

	kscan0: kscan {
		compatible = "zmk,kscan-gpio-matrix";
		label = "KSCAN";
		diode-direction = "col2row";
		col-gpios            
		    = <&pro_micro 2 GPIO_ACTIVE_HIGH>            
		    , <&pro_micro 4 GPIO_ACTIVE_HIGH>            
		    , <&pro_micro 7 GPIO_ACTIVE_HIGH>
		    , <&pro_micro 16 GPIO_ACTIVE_HIGH>
		    , <&pro_micro 10 GPIO_ACTIVE_HIGH>
		    ;	
		row-gpios
		    = <&pro_micro 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
		    , <&pro_micro 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
		    , <&pro_micro 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
		    , <&pro_micro 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
		    ;
	};
	
};

// The PS/2 GPIO and mouse drivers.
/ {
    gpio_ps2: gpio_ps2 {
		status = "disabled";
        compatible = "gpio-ps2";

        scl-gpios = <&pro_micro 14 0>;
        sda-gpios = <&pro_micro 15 0>;
    };
};

/ {
    mouse_ps2: mouse_ps2 {
		status = "disabled";
        compatible = "zmk,mouse-ps2";
        ps2-device = <&gpio_ps2>;

        // Uncomment this if you have an extra free pin and
        // want the controller to perform the Power-On-Reset
        // instead of using a reset circuit.
        rst-gpios = <&pro_micro 15 0>;
    };
};
